<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ipca.example.cmdaily.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/articleDetailFragment"
        android:name="ipca.example.cmdaily.ui.home.ArticleDetailFragment"
        android:label="@string/news"
        tools:layout="@layout/fragment_article_detail" >
        <argument
            android:name="article_string"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/navigation_sports"
        android:name="ipca.example.cmdaily.ui.home.SportsFragment"
        android:label="@string/sports" >
        <action
            android:id="@+id/action_sportsFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_technology"
        android:name="ipca.example.cmdaily.ui.home.TechnologyFragment"
        android:label="@string/technology" >
        <action
            android:id="@+id/action_technologyFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
    </fragment>

</navigation>